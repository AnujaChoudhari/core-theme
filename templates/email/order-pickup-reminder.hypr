  {% extends "email/email" %}

  {% block body-content %}
    <br>
    <p>
        {{ labels.orderWelcome }} {{ model.origin.firstName }} {{ model.origin.lastNameOrSurname }}!
    </p>
    <br>
    <p>{{ labels.orderPickupReminderBlob }}</p>

    <table class="mz-ordersummary">
        <thead>
            <tr>
                <td bgcolor="#666666"><font color="#FFFFFF">{{ labels.storeLocation }}</td>
                <td bgcolor="#666666"><font color="#FFFFFF">{{ labels.storeHours }}</font></td>
                <td bgcolor="#666666"><font color="#FFFFFF">{{ labels.pickupDetails }}</font></td>
            </tr>
        </thead>
		<tbody>
        <tr>
            <td>{{ model.storeLocation.name }}</td>
            <td class="mz-ordersummary-regular-hours">
                {{ labels.sunday }}: {{ model.storeLocation.regularHours.sunday }}<br>
                {{ labels.monday }}: {{ model.storeLocation.regularHours.monday }}<br>
                {{ labels.tuesday }}: {{ model.storeLocation.regularHours.tuesday }}<br>
                {{ labels.wednesday }}: {{ model.storeLocation.regularHours.wednesday }}<br>
                {{ labels.thursday }}: {{ model.storeLocation.regularHours.thursday }}<br>
                {{ labels.friday }}: {{ model.storeLocation.regularHours.friday }}<br>
                {{ labels.saturday }}: {{ model.storeLocation.regularHours.saturday }}<br>
            </td>
            <td>{{ model.storeLocation.note }}</td>
        </tr>
		</tbody>
    </table>

    <br>
    <table width="100%" cellpadding="1" cellspacing="1" width="100%">
        <thead>
            <tr>
                <td bgcolor="#666666"><font color="#FFFFFF">{{ labels.item }}</font></td>
                <td bgcolor="#666666" style="text-align: right;"><font color="#FFFFFF">{{ labels.subtotal }}</font></td>
            </tr>
        </thead>
        
    {% for item in model.items %}
			<tr class="mz-ordersummary-line mz-ordersummary-line-item">
				<td>
                {{ item.name }}
                <dl>
                    <dd>{{ item.productCode }}</dd>&nbsp;
                </dl>
                </td>
                <td align="right"><span class="mz-item-price">{{ item.unitPrice|currency }}</span></td>
			</tr>
		{% endfor %}
    </table>

    <p>{{ labels.orderPickupReadyBlob2 }}</p>

    {{ labels.emailClosing|string_format(siteContext.generalSettings.websiteName)|safe }}

{% endblock body-content %}